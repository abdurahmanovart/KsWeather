<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:theme="@style/AlertDialog.AppCompat"
    tools:context="com.github.arturx.weatherbykulibin.ui.SelectCityActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_city_edit_text"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:digits="QWERTYUIOPASDFGHJKLMNBVCXZqwertyuioplkjhgfdsamnbvcxz1234567890-"
            android:hint="@string/enter_city_name"
            android:inputType="textAutoComplete"
            android:maxLength="12" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textInputLayout"
        android:layout_alignParentEnd="true"
        android:text="@string/ok_button" />


</RelativeLayout>
