<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Dialog"
    tools:context="com.github.arturx.weatherbykulibin.ui.SelectCityActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_city_edit_text"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:digits="QWERTYUIOPASDFGHJKLMNBVCXZqwertyuioplkjhgfdsamnbvcxz1234567890-, "
            android:hint="@string/enter_city_name"
            android:inputType="textAutoComplete"
            android:maxLength="20" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_input_layout"
        android:layout_marginBottom="11dp"
        android:layout_toEndOf="@+id/text_input_layout"
        android:text="@string/ok_button" />

    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_input_layout" />



</RelativeLayout>
