<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/weather_type_image_view"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp" />

    <ImageView
        android:id="@+id/weather_icon_image_view"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/weather_data_text_view"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/weather_data_text_view"
        android:layout_marginBottom="12dp"
        android:src="@drawable/temperature_humid_wind" />

    <TextView
        android:layout_marginBottom="@dimen/margin_xsmall"
        android:textAlignment="center"
        android:id="@+id/date_time_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/weather_icon_image_view"
        android:layout_alignStart="@+id/weather_icon_image_view" />

    <TextView
        android:textAlignment="center"
        android:id="@+id/weather_data_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weather_type_image_view"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/weather_type_image_view" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/weather_type_image_view" />

</RelativeLayout>