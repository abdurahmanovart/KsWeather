<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/city_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


    <ImageView
        android:id="@+id/current_weather_image_view"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/city_text_view"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="22dp" />

    <TextView
        android:id="@+id/temperature_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/current_weather_image_view"
        android:layout_alignTop="@+id/current_weather_image_view"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/current_weather_image_view"
        android:padding="@dimen/padding_small"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/wind_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp"
        android:padding="@dimen/padding_small"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/humidity_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wind_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:padding="@dimen/padding_small"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/pressure_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/humidity_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:padding="@dimen/padding_small"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />


</RelativeLayout>